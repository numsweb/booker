<h1>Editing paragraph</h1>

<% form_for(@paragraph) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :locals => {:f => f} %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @paragraph %> |
<%= link_to 'Back', edit_story_path(:book_id=> @paragraph.story.book.id, :story_id => @paragraph.story.id)  %>

