<h1>Editing story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <%= render :partial => "form", :locals => {:f => f} %>
  <%= link_to "add new paragraph", create_paragraph_path(@story.id) %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', edit_book_path(:book_id => @story.book.id) %>