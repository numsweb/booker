<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><label for="title">Title:</label><br/>
<%= f.text_field :title %></p>


<p><label for="description">Description</label><br/>
<%= f.text_area :description, :rows => 2, :cols => 80 %></p>
<%= f.hidden_field :book_id, :value => @book.id %>


<hr>
<% unless @story.id.blank? %>
  <%= link_to "add new paragraph", new_paragraph_path(:story_id => @story.id) %>
<% end %>
    
<table>

  <% @story.paragraphs.each do |paragraph| %>

    <tr>
      <td>
        <%= paragraph.title %>
      </td>
      <td>
        <%= link_to "Edit " + paragraph.title, edit_paragraph_path(:story_id=> @story.id, :paragraph_id => paragraph.id) %>
      </td>
    </tr>

  <% end %>
</table>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
