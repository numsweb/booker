<div id="books">

  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
      
    </tr>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td style="padding-left: 20px;"><%= book.description.html_safe[0..50] %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
  
  <br />
  
  <%= link_to 'Create a New book', new_book_path %>
  
  <%= will_paginate @books %>
  
</div>
