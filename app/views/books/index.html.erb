

<table>
  <tr>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td style="padding-left: 20px;"><%= book.description[0..50] %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create a New book', new_book_path %>

<%= will_paginate @books %>
