<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><label for="title">Title:</label><br/>
<%= f.text_field :title %></p>


<p><label for="description">Description</label><br/>
<%= f.text_area :description, :rows => 2, :cols => 80 %></p>


<br/><hr>
<% unless @book.id.blank? %>
  <%= link_to "add new story", new_story_path(:book_id => @book.id) %>
<% end %>
<table>
  <% @book.stories.each do |story| %>

    <tr>
      <td>
        <%= story.title %>
      </td>
      <td>
        <%= link_to "Edit ", edit_story_path(:book_id=> @book.id, :story_id => story.id) %>
        |
        <%= link_to "Preview ", story_path(story.id) %>
      </td>
    </tr>
  <% end %>
</table>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>