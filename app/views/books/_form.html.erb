<p><label for="title">Title:</label><br/>
<%= f.text_field :title %></p>


<p><label for="description">Description</label><br/>
<%= f.text_area :description, :rows => 2, :cols => 80 %></p>


<br/><hr>
<table>
  <% @book.stories.each do |story| %>

    <tr>
      <td>
        <%= story.title %>
      </td>
      <td>
        <%= link_to "Edit " + story.title, edit_story_path(:book_id=> @book.id, :story_id => story.id) %>
      </td>
    </tr>
  <% end %>
</table>
